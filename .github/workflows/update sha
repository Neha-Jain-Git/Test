name: Update Last Good SHA

on:
  pull_request:
    types: [closed]

jobs:
  update-sha:
    if: github.event.pull_request.merged == true
    runs-on: ubuntu-latest

    steps:
      - name: Extract branch and SHA
        run: |
          BASE_BRANCH="${{ github.event.pull_request.base.ref }}"
          MERGE_SHA="${{ github.event.pull_request.merge_commit_sha }}"
          echo "Base branch: $BASE_BRANCH"
          echo "Merge SHA: $MERGE_SHA"

          if [ "$BASE_BRANCH" = "Test" ]; then
            echo "Updating LAST_GOOD_SHA_main_TO_Test"
            echo "LAST_GOOD_SHA_main_TO_Test=$MERGE_SHA" >> $GITHUB_ENV
          elif [ "$BASE_BRANCH" = "main" ]; then
            echo "Updating LAST_GOOD_SHA_Test_TO_main"
            echo "LAST_GOOD_SHA_Test_TO_main=$MERGE_SHA" >> $GITHUB_ENV
          else
            echo "No matching branch rule"
          fi

      # Example: commit to a file in repo for persistence
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Save SHA to file
        run: |
          mkdir -p .ci
          if [ -n "$LAST_GOOD_SHA_main_TO_Test" ]; then
            echo "$LAST_GOOD_SHA_main_TO_Test" > .ci/last_sha_main_to_test.txt
          fi
          if [ -n "$LAST_GOOD_SHA_Test_TO_main" ]; then
            echo "$LAST_GOOD_SHA_Test_TO_main" > .ci/last_sha_test_to_main.txt
          fi

          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add .ci/
          git commit -m "Update last good SHA files [skip ci]" || echo "No changes to commit"
          git push